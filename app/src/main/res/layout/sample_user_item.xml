<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
            name="groupOption"
            type="com.inscripts.cometchatpulse.Pojo.GroupOption"/>
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_height="wrap_content">


        <com.inscripts.cometchatpulse.CustomView.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:src="@{groupOption.icon}"
            tools:src="@tools:sample/avatars"
            android:layout_width="45dp"
            android:layout_height="45dp" />


        <TextView
            android:id="@+id/tvName"
            android:layout_toEndOf="@id/ivAvatar"
            android:layout_marginStart="16dp"
            tools:text="Option Name"
            android:ellipsize="end"
            android:layout_marginEnd="24dp"
            android:layout_alignTop="@id/ivAvatar"
            android:text="@{groupOption.name}"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/para_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvId"
            android:layout_toEndOf="@id/ivAvatar"
            android:layout_marginStart="16dp"
            tools:text="Option Name"
            android:ellipsize="end"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/tvName"
            android:text="@{groupOption.id}"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</layout>